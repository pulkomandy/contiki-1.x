CC=sdcc
AS=sdasz80
CL=sdldz80
LD=sdldz80

CFLAGSCOMMON= \
	-I apps \
	-I conf \
	-I ctk \
	-I lib \
	-I loader \
	-I uip \
	-I arch \
	-I $(CONTIKI)/apps \
	-I $(CONTIKI)/ctk \
	-I $(CONTIKI)/ek \
	-I $(CONTIKI)/lib \
	-I $(CONTIKI)/ppp \
	-I $(CONTIKI)/uip \
	-mz80 -D__CPC__ -DCLK_TCK=16384 \
	-DCTK_CONIO --funsigned-char \
	--no-std-crt0 --opt-code-size --allow-unsafe-read

CLFLAGS= 
OPT=
AFLAGS = -o -g

%.o: %.c
	$(CC) $(CFLAGS) $(OPT) -o $*.o $<

%.o: %.s
	$(AS) $(AFLAGS) $*.o $<

